/* pages/index/index.wxss */

page {
  background: #ebebeb;
  padding-bottom: 100rpx;
}

.banner {
  height: 420rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.playing-item {
  height: auto;
  margin: 34rpx;
  box-shadow: 0.5px 0.5px 1px #a8a8a8;
  background: #fff;
}

.film-image {
  width: 100%;
  height: 384rpx;
}

.info-container {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
}

.name {
  font-size: 26rpx;
}

.total {
  font-size: 22rpx;
  color: #9a9a9a;
}

.grade {
  font-size: 36rpx;
  color: #f78360;
}

.time {
  color: #f78360;
  font-size: 26rpx;
}
